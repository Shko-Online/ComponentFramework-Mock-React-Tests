    "postinstall": "npm run install:albx & npm run install:breadcrumb & npm run install:auto-width-label & npm run install:calendar & npm run install:command-bar & npm run install:context-menu & npm run install:details-list",
    "install:albx": "cd ComponentFramework-Mock && npm install",
