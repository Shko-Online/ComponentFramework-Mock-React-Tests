{
  "name": "@shko-online/componentframework-mock-tests",
  "version": "0.1.0",
  "description": "Test for our mocking library which helps with testing PowerApps Component Framework Components",
  "main": "index.js",
  "repository": "https://github.com/albanian-xrm/ComponentFramework-Mock-React-Tests.git",
  "author": "AlbanianXrm",
  "license": "RPL-1.5",
  "private": true,
  "scripts": {
    "postinstall": "yarn install:albx & yarn install:breadcrumb & install:auto-width-label ",
    "install:albx": "cd ComponentFramework-Mock && yarn",
    "install:breadcrumb": "cd powercat-code-components\\Breadcrumb && yarn",
    "install:auto-width-label": "cd powercat-code-components\\AutoWidthLabel && yarn",
    "build": "yarn build:breadcrumb & yarn build:auto-width-label",
    "build:breadcrumb": "cd powercat-code-components\\Breadcrumb && yarn build",
    "build:auto-width-label": "cd powercat-code-components\\AutoWidthLabel && yarn build",
    "test": "jest --coverage --maxWorkers=4",
    "test-no-cover": "jest --maxWorkers=4"
  },
  "dependencies": {
    "@fluentui/react": "8.29.0",
    "@fluentui/utilities": "8.9.0",
    "@react-hook/resize-observer": "1.2.5",
    "enzyme": "3.11.0",
    "react": "16.8.6",
    "react-dom": "16.8.6"
  },
  "devDependencies": {
    "@types/jest": "^29.0.3",
    "@types/lokijs": "^1.5.7",
    "@types/powerapps-component-framework": "^1.3.4",
    "@types/react": "^18.0.20",
    "@types/react-dom": "^18.0.6",
    "@types/sinon": "^10.0.13",
    "jest": "^29.0.3",
    "lokijs": "^1.5.12",
    "sinon": "^14.0.0",
    "ts-jest": "^29.0.1"
  }
