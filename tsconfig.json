{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "allowJs": true,
        "jsx": "react",
        "module": "es2020",
        "moduleResolution": "Node",
        "target": "ES6",
        "resolveJsonModule": true,
        "noEmit": false,
        "outDir": "dist",
        "declaration": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@shko-online/componentframework-mock*": [
                "./ComponentFramework-Mock/src*"
            ],
            "@powercat/breadcrumb*": [
                "./powercat-code-components/Breadcrumb*"
            ],
            "@powercat/auto-width-label*": [
                "./powercat-code-components/AutoWidthLabel*"
            ],
            "@powercat/calendar*": [
                "./powercat-code-components/Calendar*"
            ],
            "@powercat/command-bar*": [
                "./powercat-code-components/CommandBar*"
            ],
            "@powercat/context-menu*": [
                "./powercat-code-components/ContextMenu*"
            ],
            "@powercat/details-list*": [
                "./powercat-code-components/DetailsList*"
            ],
            "@powercat/pivot*": [
                "./powercat-code-components/Pivot*"
            ],
            "@powercat/nav*": [
                "./powercat-code-components/Nav*"
            ],
            "@powercat/shimmer*": [
                "./powercat-code-components/Shimmer*"
            ],
        },
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "wwwroot",
    ],
    "include": [
       "src",
       "__tests__",
       "stories",
       "global.d.ts"
    ]
}